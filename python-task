#Python String Exercise

  #Exercise 1: Append new string in the middle of a given string

    def append_middle(s1, s2):
    print("Original Strings are", s1, s2)

    mi = int(len(s1) / 2)

    x = s1[:mi:]
    x = x + s2
    x = x + s1[mi:]
    print("After appending new string in middle:", x)

append_middle("Ault", "Kelly")

  #Exercise 2: Create a new string made of the first, middle, and last characters of each input string
  
  def mix_string(s1, s2):
    first_char = s1[0] + s2[0]

    middle_char = s1[int(len(s1) / 2):int(len(s1) / 2) + 1] + s2[int(len(s2) / 2):int(len(s2) / 2) + 1]

    last_char = s1[len(s1) - 1] + s2[len(s2) - 1]

    res = first_char + middle_char + last_char
    print("Mix String is ", res)

s1 = "Jupiter"
s2 = "Earth"
mix_string(s1, s2)

  #Exercise 3: Arrange string characters such that lowercase letters should come first
  
  str1 = "ARjuNbABu"
print('Original String:', str1)
lower = []
upper = []
for char in str1:
    if char.islower():
        lower.append(char)
    else:
        upper.append(char)

sorted_str = ''.join(lower + upper)
print('Result:', sorted_str)

  #Exercise 4: Find the last position of a given substring
  
str = "Emma is a data scientist who knows Python. Emma works at google."
print("Original String is:", str)

index = str.rfind("Emma")
print("Last occurrence of Emma starts at index:", index)

  #Exercise 5: Reverse a given string
  
str = "PYnative"
print("Original String is:", str)

str = str[::-1]
print("Reversed String is:", str)

#Python List Exercise 

  #Exercise 1: Reverse a list in Python
  list = [100, 200, 300, 400, 500]
  
list = [100, 200, 300, 400, 500]
list = list[::-1]
print(list)

  #Exercise 2: Concatenate two lists index-wise
  list1 = ["M", "na", "i", "Ke"]
  list2 = ["y", "me", "s", "lly"]
  
list1 = ["M", "na", "i", "Ke"] 
list2 = ["y", "me", "s", "lly"]
list3 = [i + j for i, j in zip(list1, list2)]
print(list3)

  #Exercise 3: Turn every item of a list into its square
  numbers = [1, 2, 3, 4, 5, 6, 7]

numbers = [1, 2, 3, 4, 5, 6, 7]
result = []
for i in numbers:
    result.append(i * i)
print(result)

  #Exercise 4: Concatenate two lists in the following order
  list1 = ["Hello ", "take "]
  list2 = ["Dear", "Sir"]
  
list1 = ["Hello ", "take "]
list2 = ["Dear", "Sir"]

result = [x + y for x in list1 for y in list2]
print(result)  

  #Exercise 5: Remove all occurrences of a specific item from a list.
  Given a Python list, write a program to remove all occurrences of item 20.
  
list1 = [5, 20, 15, 20, 25, 50, 20]

while 20 in list1:
    list1.remove(20)
print(list1)  

